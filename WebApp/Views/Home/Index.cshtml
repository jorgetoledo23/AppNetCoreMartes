@model CategoriaHomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="row justify-content-between" style="min-height:450px;">
    @foreach (var C in Model.listaCategorias)
    {
        <div class="card col-sm-3 mr-1 ml-1 mb-3" style="width: auto; max-width:430px; max-height: 500px;">
            <div class="card-body text-center">
                <h5 class="card-title"><strong>@C.Nombre</strong></h5>
            </div>
            <a asp-controller="Home" asp-action="IndexProductos" asp-route-CategoriaId="@C.CategoriaId">
                <img src="~/images/@C.Imagen" class="card-img-top" alt="...">
            </a>
            <div class="card-body text-center">
                <h6 class="card-subtitle mb-2 text-muted">@C.Descripcion</h6>
                <p class="card-text"></p>
            </div>
        </div>
    }
</div>
<div class="row justify-content-center">
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item"><a class="page-link" href="#"><<</a></li>
            @for (int i = 1; i <= Model.CantidadPaginas; i++)
            {
                <li class="page-item"><a class="page-link" asp-action="Index" asp-route-Pagina="@i">@i</a></li>
            }
            <li class="page-item"><a class="page-link" href="#">>></a></li>
        </ul>
    </nav>
    
</div>

