@model CategoriaHomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="row justify-content-between float-left">
    @foreach (var C in Model.listaCategorias)
    {
        <div class="card col-sm-3 mr-1 ml-1 mb-3" style="width: auto; max-width:430px; max-height: 500px;">
            <div class="card-body text-center">
                <h5 class="card-title"><strong>@C.Nombre</strong></h5>
            </div>
            <a asp-controller="Cliente" asp-action="Home" asp-route-CateogiraId="@C.CategoriaId">
                <img src="~/images/@C.Imagen" class="card-img-top" alt="...">
            </a>
            <div class="card-body text-center">
                <h6 class="card-subtitle mb-2 text-muted">@C.Descripcion</h6>
                <p class="card-text"></p>
            </div>
        </div>
    }
</div>
<div class="row justify-content-between">
    @for (int i = 1; i <= Model.CantidadPaginas; i++)
    {
        <a class="btn btn-success" asp-action="Index" asp-route-Pagina="@i">@i</a>
    }
</div>

